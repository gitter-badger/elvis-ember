{{partial 'partials/main-nav'}}

<div class="h50"></div>
<div class="container">
  <div class="row">
    <div class="col s2">&nbsp;</div>
    <div class="col s8">
      <form {{!action "vis.new"}} method="post">
        <div class="row">
          <div class="input-field col s12">
            <!--             <input placeholder="Country" id="country" type="text" class="validate"> -->
            {{ember-select-guru
            value=query.country_ids
            options=countries
            searchKey='description'
            multiple=true
            optionComponent='country-option'
            onSelect=(action "onSelectEvent")}}
          </div>
          <div class="input-field col s12">
            <div class="row">
              <div class="col s2 center-align"><span class="year-label left-year">2002</span></div>
              <div class="col s8">&nbsp;</div>
              <div class="col s2 center-align"><span class="year-label right-year">2010</span></div>
            </div>
            <p class="range-field">
              {{range-slider
                min=2001
                max=2015
                step=1
                connect=true
                tooltips=true
                slide="slidingAction"}}
            </p>
          </div>
        </div>
          {{md-btn text='Proceed'
            icon='mdi-navigation-chevron-right'
            iconPosition='right'
            action='sendForm'
            class='right'
          }}
      </form>
    </div>
    <div class="col s2">&nbsp;</div>
  </div>
</div>
          <button {{action 'toggleBasic'}}>Do It</button>

{{#modal-dialog close='toggleBasic'}}
  <h1>Stop! Modal Time!</h1>
  <p>Basic</p>
  <button {{action 'toggleBasic'}}>Close</button>
{{/modal-dialog}}
