<div id="cpv-container" class="mainbg">
  {{md-btn action="toggleModal"}}
  <div class="row">
    <div class="col s10">
      <form>
        <ul id="cpv-list" class="collection with-header">
          <li class="collection-header">
            <h4>CPV (Common Procurement Vocabulary) Codes</h4>
          </li>
          {{#virtual-each cpvs
            height=height
            itemHeight=36
            positionIndex=0
            as |cpv actualIndex virtualIndex|
          }}
            <li class="collection-item">
              <div>
                <b>{{cpv.plain_code}}:</b>
                {{cpv.name}} Checked: {{cpv.checked}}
                <span class="secondary-content">
                  <p {{action "selectCpv" cpv.plain_code on="mouseUp"}}>
                    {{cpv-checkbox cpv=cpv checkedItems=checkedItems}}
                  </p>
                  {{!md-check
                    data-name=cpv.plain_code
                    name=cpv.plain_code}}
                </span>
              </div>
            </li>
          {{else}}
            <strong>No results</strong>
          {{/virtual-each}}
        </ul>
      </form>
    </div>
  </div>
</div>
